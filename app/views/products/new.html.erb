<h1>New Product</h1>

<%= form_for @product do |f| %>
  <div>
    <%= f.label :name, "Product Name" %>
    <%= f.text_field :name %>
  </div>

  <h3>Attributes</h3>

  <div>
    <% @product_specs.each_with_index do |spec, index| %>
      <div>
        <%= text_field_tag "product_specs[#{index}][key]", spec[:key], placeholder: "Attribute name" %>
        <%= text_field_tag "product_specs[#{index}][value]", spec[:value], placeholder: "Attribute value" %>
      </div>
    <% end %>
  </div>

  <div>
    <%= submit_tag "Add Another Attribute", name: "add_more_attributes" %>
    <%= f.submit 'Create Product'%>
  </div>
<% end %>

<%= link_to 'Back to Products', products_path %>