<h1>New Product</h1>

<%= form_for @product do |f| %>
  <div>
    <%= f.label :name, "Product Name" %>
    <%= f.text_field :name %>
  </div>

  <h3>Attributes</h3>
  <div>
    <%= f.fields_for :product_specs do |spec_form| %>
      <div>
        <div>
          <%= spec_form.text_field :key, placeholder: "Attribute name"%>
          <%= spec_form.text_field :value, placeholder: "Attribute value" %>
        </div>
      </div>
    <% end %>
  </div>

  <div>
    <%= submit_tag "Add Another Attribute", name: "add_more_attributes" %>
    <%= f.submit 'Create Product'%>
  </div>
<% end %>

<%= link_to 'Back to Products', products_path %>